<%- include("layout/header") %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert- <%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                 <strong><%= message.message  %></strong>
            </div>
             
            <% } %>
            <div class="table-reponsive">
                <% if (users != '') { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-primary">
                                <th>Id</th>
                                <th>Imagem</th>
                                <th>Nome do Evento</th>
                                <th>Descrição do Evento</th>
                                <th>telefone de Contato</th>
                                <th>Editar/Excluir</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                             
                                
                            <tr class="align-middle">
                                <td><%= index %></td>
                                <td><img src="https://static.wixstatic.com/media/d2252d_4c1a1bda6a774bd68f789c0770fd16e5~mv2.png" width="50" alt="img-thumbnail"/></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>"class="text-sucess"><i class="fas fa-edit fa-lgnx-1"></i></a>
                                    <a href="/delete/<%= row._id %>"class="text-danger"><i class="fas fa-trash fa-lgnx-1"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% }else{ %>
                    <h1 class="text-center text-secondary mt-5"> não tem mais nenhum evento</h1>
                    <%  }%>

            </div>
            </div>
        </div>
    </div>
</div>
<%- include("layout/footer") %>
