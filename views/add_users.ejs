<%- include("layout/header") %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Add New User</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Nome da Comunidade</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="descrição">descrição</label>
                            <input type="descrição" name="email" class="form-control form-control-lg" placeholder="descrição" required/>
                        </div>                        
                        <div class="mb-3">
                            <label for="Telefone de Contato">Telefone de Contato</label>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Telefone de Contato" required/>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Selecionar uma Imagem</label>
                            <input type="file" name="image" class="form-control form-control-lg" required/>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("layout/footer") %>
